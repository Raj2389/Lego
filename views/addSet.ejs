<!DOCTYPE html>
<html>

<head>
	<title>Lego Collection</title>
	<meta charset="UTF-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/theme.css">	
</head>

<body>
	<%- include('partials/navbar', {page: '/lego/addSet'}) %>
	<div class="container">
		<div class="row">
			<main class="col-md-12">

                <section class="bg-light text-center py-5">
                    <div class="container">
                        <h1 class="display-5 fw-bold">Add Set</h1>
                        <p class="lead text-muted">Fill the below form to add a new Set</p>
                    </div>
                </section>

			</main>
		</div>
	</div>
    <form action="/lego/addSet" method="POST"> <!-- Form submission to /lego/addSet -->
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" required> <!-- Name input -->
        </div>
        
        <div class="mb-3">
            <label for="year" class="form-label">Year</label>
            <input type="number" class="form-control" id="year" name="year" required> <!-- Year input -->
        </div>
        
        <div class="mb-3">
            <label for="num_parts" class="form-label">Number of Parts</label>
            <input type="number" class="form-control" id="num_parts" name="num_parts" required> <!-- Number of parts input -->
        </div>
        
        <div class="mb-3">
            <label for="img_url" class="form-label">Image URL</label>
            <input type="url" class="form-control" id="img_url" name="img_url" required> <!-- Image URL input -->
        </div>
        
        <div class="mb-3">
            <label for="theme_id" class="form-label">Theme</label>
            <select class="form-select" id="theme_id" name="theme_id" required> <!-- Theme selection -->
                <option value="" disabled selected>Select a theme</option> <!-- Placeholder option -->
                <% themes.forEach(theme => { %>
                    <option value="<%= theme.id %>"><%= theme.name %></option>
                <% }) %>
            </select>
        </div>
        
        <div class="mb-3">
            <label for="set_num" class="form-label">Set Number</label>
            <input type="text" class="form-control" id="set_num" name="set_num" required> <!-- Set number input -->
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button> <!-- Submit button -->
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>

</html>